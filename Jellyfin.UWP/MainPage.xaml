<Page
    x:Class="Jellyfin.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:app1="using:Jellyfin.UWP"
    xmlns:m="using:Jellyfin.UWP.Models"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    d:DataContext="{d:DesignInstance Type=app1:MainViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <DataTemplate x:Key="UiMediaListItemDataTemplate" x:DataType="m:UIMediaListItem">
            <StackPanel>
                <TextBlock Text="{x:Bind Name}" FontSize="25" />
                <Image Source="{x:Bind Url}" />
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="#202020" Height="125" Grid.Row="0" />

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Search" Margin="15" Click="SearchClick" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="Logout" Content="Logout" Margin="15" Click="Logout_Click" />
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="My Media" Foreground="White" />

                    <ListView
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            ScrollViewer.HorizontalScrollMode="Enabled"
            ScrollViewer.VerticalScrollMode="Disabled"
            ItemsSource="{Binding MediaList, Mode=OneWay}"
            ItemClick="{x:Bind ClickItemList}"
            IsItemClickEnabled="True" ItemTemplate="{StaticResource UiMediaListItemDataTemplate}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="Transparent" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Continue Watching" Foreground="White" Visibility="{Binding HasResumeMedia, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <ListView
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            ScrollViewer.HorizontalScrollMode="Enabled"
            ScrollViewer.VerticalScrollMode="Disabled"
            ItemsSource="{Binding ResumeMediaList, Mode=OneWay}"
            ItemClick="{x:Bind MediaClickItemList}"
            IsItemClickEnabled="True" Visibility="{Binding HasResumeMedia, Converter={StaticResource BoolToVisibilityConverter}}"  ItemTemplate="{StaticResource UiMediaListItemDataTemplate}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="Transparent" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Next Up" Foreground="White" />

                    <ListView
ScrollViewer.VerticalScrollBarVisibility="Disabled"
ScrollViewer.HorizontalScrollBarVisibility="Visible"
ScrollViewer.HorizontalScrollMode="Enabled"
ScrollViewer.VerticalScrollMode="Disabled"
ItemsSource="{Binding NextupMediaList, Mode=OneWay}"
ItemClick="{x:Bind MediaClickItemList}"
IsItemClickEnabled="True" ItemTemplate="{StaticResource UiMediaListItemDataTemplate}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="Transparent" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>

                <StackPanel x:Name="latest">
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>