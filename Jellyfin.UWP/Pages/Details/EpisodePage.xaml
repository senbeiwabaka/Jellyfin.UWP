<Page
    x:Class="Jellyfin.UWP.Pages.Details.EpisodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:uc="using:Jellyfin.UWP.Controls"
    xmlns:m="using:Jellyfin.UWP.Models"
    xmlns:uwp="using:Jellyfin.UWP.ViewModels.Details"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    d:DataContext="{d:DesignInstance Type=uwp:EpisodeViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <interactivity:Interaction.Behaviors>
        <interactivity:EventTriggerBehavior EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.LoadMediaInformationCommand}" CommandParameter="{x:Bind id}" />
        </interactivity:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToObjectConverter x:Key="InverseBoolToVisibilityConverter" TrueValue="Collapsed" FalseValue="Visible" />
        <converters:BoolToObjectConverter x:Key="TrueRedFalseWhite" TrueValue="#cc3333" FalseValue="#ffffff" />
        <converters:BoolToObjectConverter x:Key="ClearHeartFilledHeart" TrueValue="&#xEB52;" FalseValue="&#xEB51;" />
    </Page.Resources>

    <Grid Background="#101010">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <uc:TopControl Grid.Row="0" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid 
                Grid.ColumnSpan="2" 
                Canvas.ZIndex="5" 
                Background="Gray" 
                Opacity=".8" 
                Visibility="{x:Bind ViewModel.LoadMediaInformationCommand.IsRunning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <muxc:ProgressRing HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" IsActive="{x:Bind ViewModel.LoadMediaInformationCommand.IsRunning, Mode=OneWay}" />
            </Grid>
            
            <Image Source="{x:Bind ViewModel.ImageUrl, Mode=OneWay}" Grid.Column="0" />

            <ScrollViewer Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="EPISODE" Visibility="{x:Bind ViewModel.IsInDebug, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <StackPanel Padding="30,0,0,0">
                        <StackPanel.Background>
                            <SolidColorBrush Color="#202020" Opacity=".8" />
                        </StackPanel.Background>

                        <Button 
                            x:Name="SeriesName" 
                            Click="SeriesName_Click" 
                            Content="{x:Bind ViewModel.MediaItem.SeriesName, Mode=OneWay}" 
                            FontSize="26">
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Height="85"  Padding="30,0,0,0">
                        <StackPanel.Background>
                            <SolidColorBrush Color="#202020" Opacity=".8" />
                        </StackPanel.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel>
                                    <TextBlock>
                                        <Run Text="{x:Bind ViewModel.MediaItem.SeasonName, Mode=OneWay}" />
                                        <Run> - </Run>
                                        <Run Text="{x:Bind ViewModel.MediaItem.IndexNumber, Mode=OneWay}" />
                                        <Run> </Run>
                                        <Run Text="{x:Bind ViewModel.MediaItem.Name, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind ViewModel.MediaItem.ProductionYear, Mode=OneWay}" Padding="0,0,20,0" />

                                    <TextBlock Text="{x:Bind ViewModel.RunTime, Mode=OneWay}" Padding="0,0,20,0" />

                                    <TextBlock Text="{x:Bind ViewModel.MediaItem.OfficialRating, Mode=OneWay}" Padding="0,0,20,0" />

                                    <TextBlock Text="{x:Bind ViewModel.MediaItem.CommunityRating, Mode=OneWay}" Padding="0,0,20,0" />

                                    <TextBlock Text="{x:Bind ViewModel.MediaItem.CriticRating, Mode=OneWay}" Padding="0,0,20,0" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <Button x:Name="Play" Click="Play_Click" ToolTipService.ToolTip="Play" Margin="10">
                                    <Button.Background>
                                        <SolidColorBrush Color="#000000" Opacity="0" />
                                    </Button.Background>
                                    <SymbolIcon x:Name="play" Symbol="Play" />
                                </Button>

                                <Button ToolTipService.ToolTip="Mark played" Margin="10" Command="{x:Bind ViewModel.PlayedStateCommand}">
                                    <Button.Background>
                                        <SolidColorBrush Color="#000000" Opacity="0" />
                                    </Button.Background>
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;" Foreground="{x:Bind ViewModel.MediaItem.UserData.Played, Converter={StaticResource TrueRedFalseWhite}}" />
                                </Button>

                                <Button ToolTipService.ToolTip="Add to favorites" Margin="10" Command="{x:Bind ViewModel.FavoriteStateCommand}">
                                    <Button.Background>
                                        <SolidColorBrush Color="#000000" Opacity="0" />
                                    </Button.Background>
                                    <FontIcon 
                                        FontFamily="Segoe MDL2 Assets" 
                                        Foreground="{x:Bind ViewModel.MediaItem.UserData.IsFavorite, Mode=OneWay, Converter={StaticResource TrueRedFalseWhite}}" 
                                        Glyph="{x:Bind ViewModel.MediaItem.UserData.IsFavorite, Mode=OneWay, Converter={StaticResource ClearHeartFilledHeart}}" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Padding="30,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Video" Width="93" />
                            <TextBlock 
                                Visibility="{x:Bind ViewModel.HasMultipleVideoStreams, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                Text="{x:Bind ViewModel.VideoType, Mode=OneWay}" />
                            <ComboBox Visibility="{x:Bind ViewModel.HasMultipleVideoStreams, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Audio" Width="93" />
                            <TextBlock Visibility="{x:Bind ViewModel.HasMultipleAudioStreams, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" Text="{x:Bind ViewModel.AudioType, Mode=OneWay}" />
                            <ComboBox 
                                Visibility="{x:Bind ViewModel.HasMultipleAudioStreams, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" 
                                ItemsSource="{x:Bind ViewModel.AudioStreams, Mode=OneWay}" 
                                DisplayMemberPath="Title" 
                                SelectedValuePath="IsSelected" 
                                SelectedItem="{x:Bind ViewModel.SelectedAudioStream, Mode=TwoWay}">
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Visibility="{x:Bind ViewModel.HasSubtitle, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Subtitle" Width="93" />
                            <TextBlock Visibility="{x:Bind ViewModel.HasMultipleSubtitleStreams, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" Text="{x:Bind ViewModel.SubtitleType}" />
                            <ComboBox Visibility="{x:Bind ViewModel.HasMultipleSubtitleStreams, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" ItemsSource="{x:Bind ViewModel.SubtitleStreams}" DisplayMemberPath="Title" SelectedValuePath="IsSelected" SelectedItem="{x:Bind ViewModel.SelectedSubtitleStream, Mode=TwoWay}">
                            </ComboBox>
                        </StackPanel>

                        <TextBlock Text="{x:Bind ViewModel.MediaTagLines, Mode=OneWay}" Margin="0,17,0,17" />
                        <TextBlock Text="{x:Bind ViewModel.MediaItem.Overview, Mode=OneWay}" TextWrapping="WrapWholeWords" Margin="0,15,0,15" />

                        <!--<TextBlock Text="{x:Bind ViewModel.MediaTags}" Margin="0,9,0,9" />-->

                        <StackPanel Margin="0,22,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,7">
                                <TextBlock Text="Genres" Width="93" />
                                <TextBlock Text="{x:Bind ViewModel.Genres, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock FontSize="22">
                                <Run>More from</Run>
                                <Run Text="{x:Bind ViewModel.MediaItem.SeasonName, Mode=OneWay}" />
                            </TextBlock>

                            <ListView
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.HorizontalScrollBarVisibility="Visible"
                            ScrollViewer.HorizontalScrollMode="Enabled"
                            ScrollViewer.VerticalScrollMode="Disabled"
                            ItemsSource="{x:Bind ViewModel.SeriesEpisodes, Mode=OneWay}"
                            IsItemClickEnabled="True"
                            ItemClick="{x:Bind MediaClickItemList}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Background="Transparent" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="m:UIMediaListItem">
                                        <StackPanel Width="380">
                                            <uc:ViewedIconControl PositionLeft="345" PositionTop="5" HasBeenViewed="{x:Bind UserData.HasBeenWatched}" />
                                            <uc:PlayButtonControl PositionLeft="175" PositionTop="95" />
                                            <uc:ViewedFavoriteButtonControl PositionLeft="285" PositionTop="180" Item="{x:Bind}" ButtonClick="ViewedFavoriteButtonControl_Click" />

                                            <Image Source="{x:Bind Url}" Height="215" Stretch="Fill" Canvas.ZIndex="-1" />
                                            <TextBlock FontSize="14">
                                                <Run Text="{x:Bind IndexNumber}" />
                                                <Run>. </Run>
                                                <Run Text="{x:Bind Name}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Cast &amp; Crew" FontSize="22" />

                            <ListView
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                ScrollViewer.HorizontalScrollMode="Enabled"
                                ScrollViewer.VerticalScrollMode="Disabled"
                                ItemsSource="{x:Bind ViewModel.CastAndCrew, Mode=OneWay}"
                                IsItemClickEnabled="False">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Background="Transparent" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="m:UIPersonItem">
                                        <StackPanel Width="204" Height="360">
                                            <Image Source="{x:Bind ImageUrl}" Width="186" />
                                            <TextBlock Text="{x:Bind Name}" FontSize="15" />
                                            <TextBlock Text="{x:Bind Role}" FontSize="12" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
