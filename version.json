{
  "version": "0.4",
  "cloudBuild": {
    "buildNumber": {
      "enabled": true
    },
    "setVersionVariables": true,
    "setAllVariables": true
  },
  "publicReleaseRefSpec": [
    "^refs/heads/dotnet9", // DotNet 9 release since the tech is still in preview for UWP
    "^refs/tags/v\\d+\\.\\d+" // we also release tags starting with vN.N
  ]
}